pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git 'https://github.com/YASHSRIVASTAVA07/DevOps-Project-Swiggy.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-creds', toolName: 'docker') {
                        sh 'docker build -t swiggy .'
                        sh 'docker tag swiggy yashsrivastava07/swiggy:latest'
                        sh 'docker push yashsrivastava07/swiggy:latest'
                    }
                }
            }
        }

        stage('Deploy to Container') {
            steps {
                sh '''
                docker stop swiggy || true
                docker rm swiggy || true
                docker run -d --name swiggy -p 3000:3000 yashsrivastava07/swiggy:latest
                '''
            }
        }
    }
}
